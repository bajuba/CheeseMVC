@model List<CheeseMVC.Models.Cheese>

<h1>My Cheeses</h1>

<a asp-controller='Cheese' asp-action='Add'>Add Cheese</a>

@if (Model.Count == 0)
{
    <p>No Cheeses</p>
}
else
{
<table class="table">
    <tr>
        <th>Name</th><th>Description</th><th>Type</th>
    </tr>
    @foreach (Cheese cheese in Model)
    {
        <tr>
            <td>@cheese.Name</td> <td>@cheese.Description</td><td>@cheese.Type</td>
        </tr>
    }
</table>
}